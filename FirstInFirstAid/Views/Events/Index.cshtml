@model IEnumerable<FirstInFirstAid.Models.Event>

@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Events</h2>


<p>
    @Html.ActionLink("Create New", "Create") 
</p>

<div class="container">
    <div class="row">
        <div class="table-responsive">
            <table class="table" id="segments" style="width:100%; padding-top:40px;">
                <tr>
                    <th>
                        Client Name
                    </th>
                    <th>
                        Event Name
                    </th>
                    <th>
                        Invoice Number
                    </th>
                    <th>
                        Hourly Rate
                    </th>
                    <th>
                        Total Fee
                    </th>
                    <th>
                        Event State
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HourlyRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventState)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
}

            </table>
        </div>
    </div>
</div>
