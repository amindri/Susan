            </tr>
        </tbody>
    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input onclick="addAllQualificationsToForm();" type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
