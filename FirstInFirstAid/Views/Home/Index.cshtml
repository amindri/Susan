@{
    Layout = null;   
}

@section JavaScript
{
    <script type="text/javascript" src="@Url.Content("/Scripts/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/jquery-1.10.2.min.js")"></script>
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title First In Firstaid - Login</title>

    @Styles.Render("~/Content/Login.css")
</head>
<body>
    <div class="container-fluid login">
        <h2 class="login-header"> BUSINESS MANAGEMENT SOFTWARE</h2>
        <div  id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                 <div class="loginmodal-container">
                    <div class="loginmodal-header">
                        <h3 class="login-subheader">Login to Your Account </h3>
                    </div>
                    <div class="loginmodal-body">
                        @using (Html.BeginForm("ExternalLogin", "Accounts"))
    {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-default" id="Google" name="provider" value="Google"
                            title="Log in using your Google account">
                        Login
                    </button>
}
                    </div>
                 <!--   <div class="loginmodal-footer">
                        <div class="login-help">
                            <a href="#">Register</a> - <a href="#">Forgot Password</a>
                        </div>
                    </div> -->
                </div>
                </div>
            </div>      
</body>
</html>



